{
  "hooks": {
    "after:bump": [
      "pnpm build",
      "git add .",
      "git commit -m 'chore(release): Release v${nextVersion}'"
    ]
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "publishArgs": [],
    "tag": null,
    "otp": null,
    "ignoreVersion": false,
    "allowSameVersion": false,
    "versionArgs": [],
    "skipChecks": false,
    "timeout": 100
  }
}
